" -- Configuration --
set autoindent
set expandtab
set history=300
set mouse=a
set number
set numberwidth=4
set ruler
set nobackup
set nowritebackup
set noswapfile
set shiftwidth=2
set softtabstop=2
set shiftround
set tabstop=2
set wildmenu
set showcmd
set incsearch
set laststatus=2  " Always display the status line

" Make it obvious where 80 characters is
set textwidth=80
set colorcolumn=+1

" -- Plugins --
" Activates the CtrlP plugin
set runtimepath^=~/.vim/bundle/ctrlp.vim
